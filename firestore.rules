rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Approved users list (read-only for auth'd users, write = admin only via console) ──
    match /config/allowedUsers {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // ── Join requests (anyone can write their own request, no reads/deletes) ──
    match /joinRequests/{email} {
      allow create, update: if true;
      allow read, delete: if false;
    }

    // ── User data — strictly scoped to the owning UID ──
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null
        && request.auth.uid == userId;
    }

    // ── Global badge definitions — readable by any authenticated user ──
    match /badges/{badgeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
